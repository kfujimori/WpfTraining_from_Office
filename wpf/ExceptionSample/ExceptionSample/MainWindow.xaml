<Window x:Class="ExceptionSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="160" Width="225">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Width="20" Content="X" HorizontalAlignment="Right" Click="Button_Click" />
        <Button Grid.Row="1" Height="20" Content="例外発生" Width="100" Click="Button_Click_1" />
        <Button Grid.Row="2" Height="20" Content="例外解除" Width="100" Click="Button_Click_2" />
    </Grid>
</Window>
